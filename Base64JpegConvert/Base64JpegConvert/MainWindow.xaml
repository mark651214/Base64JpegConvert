        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Base64JpegConvert"
        mc:Ignorable="d"
        Title="Base64JpegConvert" Height="450" Width="1118">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="539*"/>
            <ColumnDefinition Width="580*"/>
        </Grid.ColumnDefinitions>
        <Button Content="&gt;" HorizontalAlignment="Left" Height="56" Margin="533,120,0,0" VerticalAlignment="Top" Width="71" Click="Button_Click" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TextBoxBase64" HorizontalAlignment="Left" Height="415" Margin="10,0,0,0" Text="Base64" TextWrapping="Wrap" VerticalAlignment="Center" Width="500" RenderTransformOrigin="0.101,0.247"/>
        <Image x:Name="ImagePic" HorizontalAlignment="Left" Height="418" Margin="90,10,0,0" VerticalAlignment="Top" Width="473" Grid.Column="1"/>

    </Grid>
